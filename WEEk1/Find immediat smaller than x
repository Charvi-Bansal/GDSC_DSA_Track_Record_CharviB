class Solution{
    public:
    // User function to complete
    // arr[]: input array
    // n: size of array
    // k: find element smaller and closest to it. 
    long int immediateSmaller(int arr[], int n, int x){
        int i=0;
        long int temp;
        temp=arr[0];
        
        while(i<n){
            if(arr[i] <= x && arr[i] > temp)
            temp=arr[i];
            i++;
        }
        
        if(temp==arr[0])
        return -1;
        
        return temp;
    }
};
